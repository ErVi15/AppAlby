<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Titolo stato -->
    <TextView
        android:id="@+id/text_feedback_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progresso sano"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Descrizione -->
    <TextView
        android:id="@+id/text_feedback_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="La tua velocitÃ  consolidata sta aumentando in modo stabile." />

    <!-- Separatore -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="?attr/colorOutline" />

    <!-- Suggerimento -->
    <TextView
        android:id="@+id/text_feedback_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continua a lavorare sui BPM intermedi." />

</LinearLayout>
